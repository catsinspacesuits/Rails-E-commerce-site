<%= form_with(model: product, local: true, class: 'product-form') do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :product_description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, id: :product_image_url, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :color %><br>
    <%= form.text_field :color, id: :product_color, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.text_field :price, id: :product_price, class: 'form-control' %>
  </div>

  <div class="actions">
      <%= submit_tag("Submit", class:"btn btn-default btn-product") %>
  </div>

  <%= link_to 'Show', @product %> |
  <%= link_to 'Back', products_path %>
<% end %>

